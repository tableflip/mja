extends ../layouts/default

block content
  ul.list-unstyled.content
    each update in updates
      li
        img(src= '/images/homepageupdates/large/' + update.image.filename)
        h3= update.title
        p!= update.content

block sidebar
  a.scrollUp(href='#')
  ul.list-unstyled.sidebar
    each update in updates
      li
        a(href='updates/' + update.slug)
          .col-xs-6
            i= update.type + ':'
            h4= update.title
          .col-xs-6
            img(src= '/images/homepageupdates/thumb/' + update.image.filename)
  a.scrollDown(href='#')
