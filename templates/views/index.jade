extends ../layouts/default

block content
  ul.list-unstyled.content
    each update in updates
      li
        img(src= update._.image.fill(1200, 800))
        h3= update.title
        p!= update.excerpt

block sidebar
  a.scrollUp(href='#')
  ul.list-unstyled.sidebar
    each update in updates
      li
        a(href='updates/' + update.slug)
          .col-xs-6
            i= update.type + ':'
            h4= update.title
          .col-xs-6
            img(src= update._.image.fill(200, 200))
  a.scrollDown(href='#')
