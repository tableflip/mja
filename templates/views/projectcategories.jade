extends ../layouts/default

block content
  .project-categories.image-grid
    ul.list-unstyled.content
      each category in categories
        li.col-sm-4
          - var src = category.image.url ? category._.image.fill(300, 300) : 'http://placehold.it/300x300'
          a(href= '/projects/' + category.slug)
            .grid-image(style='background-image: url("'+ src +'")')
            h4.capitalize= category.name

block sidebar
  .sidebar
    h4 Projects
    .mja-breadcrumb
      a(href='/') Home
      em  - Projects
    .sidebar-content
      !=page.sidebarContent
