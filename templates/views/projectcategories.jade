extends ../layouts/default

block content
  .project-categories
    ul.list-unstyled.content
      each category in categories
        li: a(href= '/projects/' + category.slug)
          img(src= '/images/projectCategories/thumb/' + category.image.filename)
          h4.capitalize= category.title

block sidebar
  .sidebar
    h2 Projects
    h3.breadcrumb
      a(href='/') Home
      span  - Projects
    !=page.sidebarContent
