extends ../layouts/default

block content
  .projects
    ul.list-unstyled.content
      each project in projects
        li
          a(href= '/projects/' + category.slug + '/' + project.slug)
            if project.images[0].filename
              img(src= '/images/projects/thumb/' + project.images[0].filename)
            else
              img(src='http://placehold.it/200x200')
            h4.capitalize= project.name

block sidebar
  .sidebar
    h2 Clients
    .mja-breadcrumb
      a(href='/') Home
      span= ' - '
      a(href='/projects') Projects
      em= ' - ' + category.name
    .sidebar-content
      != category.sidebarContent
