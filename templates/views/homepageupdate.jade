extends ../layouts/default

block content
  ul.list-unstyled.content
    li
      img(src= selectedUpdate._.image.fill(800, 600))
      h3= selectedUpdate.title
      p.excerpt!= selectedUpdate.excerpt
      p!= selectedUpdate.content

block sidebar
  a.scrollUp(href='#')
  ul.list-unstyled.sidebar
    each update in updates
      li
        a(href='/updates/' + update.slug)
          .col-xs-6
            i= update.type + ':'
            h4= update.title
          .col-xs-6
            img(src= update._.image.fill(200, 200))
  a.scrollDown(href='#')
